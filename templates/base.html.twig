<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content="Le site internet du restaurant du chef Arnaud Michant le 'Quai Antic' à Chambéry">
		<title>
			{% block title %}Quai Antic{% endblock %}
		</title>
		<link rel="icon" href={{asset('images/quaiantic.png')}}>
		
		{% block stylesheets %}
			<!-- CSS -->
			<link rel="stylesheet" href={{asset('css/bootstrap.min.css')}}>
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
			<link rel="stylesheet" href={{ asset('css/styles.css') }}>
		{% endblock %}
	</head>
	<body>
    <header>
		{% block header %}
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary mb-2">
				<div class="container-fluid">
					<a class="navbar-brand" href="/"><img class="logo" src={{asset('images/logoquaiantic.png')}} alt="logo"></a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarColor01">
						<ul class="navbar-nav me-auto">
							<li class="nav-item m-2 m-lg-0 p-1 nav-fill">
								<a class="nav-link cartehover" href="/carte">Carte</a>
							</li>
							<li class="nav-item m-2 m-lg-0 p-1 nav-fill">
								<a class="nav-link cartehover" href="/menu">Menus</a>
							</li>
							{% if app.request.attributes.get('_route') == "app_reservation" %}
							{% else %}
							<li class="nav-item bg-dark rounded m-2 m-lg-0 p-1 nav-fill">
								<a class="nav-link" href="/reservation">Réserver</a>
							</li>
							{% endif %}
						</ul>
						<ul class="navbar-nav me-auto w-100 justify-content-end">
							{% if app.user and is_granted('ROLE_ADMIN') %}
							<li class="nav-item bg-dark rounded m-2 m-lg-1  p-1 nav-fill">
								<a class="nav-link" href="/admin">Espace Administrateur</a>
							</li>
							{% endif %}	
							<li class="nav-item bg-dark rounded m-2 m-lg-1 p-1 nav-fill">
							{% if app.user %}
								<a class="nav-link" href="/logout">Se déconnecter</a>
							{% else %}
								<a class="nav-link" href="/login">Se connecter</a>
							{% endif %}	
							</li>
						</ul>
					</div>
				</div>
			</nav>
			<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Réserver une table</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
       
				<form class="container" action="{{path('app_reservation')}}" method="get">
					<label class="m-1" for="start"> Quel jour souhaitez-vous réserver ?</label>
					<input class="form-control m-1" type="date" value={{ 'now' | format_date('full', locale='fr') }} name="reservationDay" required>
					<input class="btn btn-primary m-1" type="submit" value="valider">
				</form>
      </div>
			
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
      </div>
    </div>
  </div>
</div>
		{% endblock %}
      </header>
		{% block body %}
    {% endblock %}
	</body>
	<footer>
		{% block footer %}		
		<div class="container mt-5 row justify-content-between">
					<div class="m-auto p-4 col-12 col-lg-4" style="color:black;">
						<h3>Horaires d'ouverture :</h3>
						{% for horaire in horaires %}
						<div class="d-flex justify-content-between mt-2">
							<div>{{horaire.day}}</div>
							<div>
								{% if  horaire.morningStartAt|format_datetime('none', 'short', locale='fr')  == "00:00" %}
									<div>Fermé</div>
								{% else %}
									<div>{{horaire.morningStartAt|format_datetime('none', 'short', locale='fr')}} - {{horaire.morningEndAt|format_datetime('none', 'short', locale='fr')}}</div>
								{% endif %}
								{% if horaire.afternoonStartAt|format_datetime('none', 'short', locale='fr') =="00:00" %}
									<div>Fermé</div>
								{% else %}
									<div>{{horaire.afternoonStartAt|format_datetime('none', 'short', locale='fr')}} - {{horaire.afternoonEndAt|format_datetime('none', 'short', locale='fr')}}</div>
								{% endif %}
							</div>
						</div>
						{% endfor %}
					</div>
					<div class="p-4 col-12 col-lg-4" style="color:black;">
						<img class='logo' src={{asset('images/logoquaiantic.png')}} alt="logo">
						<div>Chef Arnaud Michant</div>
						<div>
							<span class="fs-3">Adresse :</span>
							<div>15, rue de la mairie 73000 Chambéry</div>
						</div>
						<div class="mt-5 d-flex">
							<a class="nav-link me-4" href="#">
								<i class="bi bi-facebook"></i>
							</a>
							<a class="nav-link me-4" href="#">
								<i class="bi bi-twitter"></i>
							</a>
							<a class="nav-link me-4" href="#">
								<i class="bi bi-instagram"></i>
							</a>
						</div>
					</div>
				</div>
		{% endblock %}
		</footer>
	{% block javascripts %}
		<!-- JavaScript -->
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src={{ asset('scripts/hoverTitle.js')}}></script>
		<script src={{ asset('scripts/togglePassword.js')}}></script>
		<script src={{ asset('scripts/creneauxChoice.js')}}></script>
	{% endblock %}
</html>
