      {% if formule.title == title %}
   
        <div class="colorTitle text-center lora">
         {{ formule.formule}}
        </div>
        <div class="text-center lora">
          <i>{{formule.description}}</i>
        </div>
        <div class="text-center lora">
          <b><i>{{formule.price}} â‚¬</i></b>
        </div>
      {% endif %}
     {% endfor %}
